<article class="user-view">
  <div class="elements-column">
    <header class="user-view__header form-row">
      <h1>{{user.firstName}} {{user.lastName}}</h1>
    </header>
    <div class="form-row">
      <div class="avatar user-view__avatar"></div>
    </div>
    <div class="form-row form-row--wide">
      <span class="name">{{ui.user.emailLabel}}</span>
      <span class="value">{{user.email}}</span>
    </div>
    <div class="form-row form-row--wide">
      <span class="name">{{ui.user.loginLabel}}</span>
      <span class="value">{{user.login}}</span>
    </div>
    <div class="form-row form-row--wide">
      <span class="name">{{ui.user.firstNameLabel}}</span>
      <span class="value">{{user.firstName}}</span>
    </div>
    <div class="form-row form-row--wide">
      <span class="name">{{ui.user.lastNameLabel}}</span>
      <span class="value">{{user.lastName}}</span>
    </div>
    <div class="form-row form-row--wide">
      <span class="name">{{ui.user.phoneLabel}}</span>
      <span class="value">{{user.phone}}</span>
    </div>

    <footer class="user__actions actions">
      <div class="actions__item">
        <button class="button button--primary" type="button" id="edit">{{ui.edit}}</button>
      </div>
      <div class="actions__item">
        <button class="button button--secondary" id="password">{{ui.changePassword}}</button>
      </div>
      <div class="actions__item">
        <button class="button button--danger-ghost" id="logout">{{ui.logout}}</button>
      </div>
    </footer>
  </div>
</article>
